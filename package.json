{
	"name": "job-autofill",
	"private": true,
	"scripts": {
		"dev:popup": "pnpm --filter popup-ui dev",
		"build": "pnpm build:core && pnpm build:popup && pnpm build:extension",
		"build:core": "pnpm --filter core build",
		"build:popup": "pnpm --filter popup-ui build",
		"build:extension": "pnpm --filter extension build",
		"type-check": "pnpm -r exec tsc --noEmit",
		"lint": "pnpm -w exec eslint --ext .ts,.tsx,.js,.jsx \"apps/**\" \"packages/**\"",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"clean": "pnpm -r --parallel exec rm -rf dist node_modules",
		"test": "pnpm -r test",
		"test:e2e:prepare": "pnpm --filter extension test:e2e:prepare",
		"test:e2e:run": "pnpm --filter extension test:e2e:run",
		"test:e2e:report": "pnpm --filter extension test:e2e:report",
		"test:e2e": "pnpm test:e2e:prepare && pnpm test:e2e:run",
		"launch": "start-server-and-test \"http-server apps/extension/tests/pages -p 5173 -c-1\" http://localhost:5173/test-page.html \"cd apps/extension/dist && web-ext run --browser-console --devtools --start-url http://localhost:5173/test-page.html\"",
		"prepare": "husky"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.55.0",
		"@typescript-eslint/parser": "^8.55.0",
		"eslint": "^10.0.0",
		"eslint-plugin-react": "^7.37.5",
		"http-server": "^14.1.1",
		"husky": "^9.1.7",
		"prettier": "^3.8.1",
		"start-server-and-test": "^2.1.3",
		"typescript": "^5.9.3",
		"web-ext": "^9.3.0"
	}
}
