{
	"name": "extension",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "node build.js",
		"sign": "web-ext sign --source-dir dist --api-key $env:AMO_JWT_ISSUER --api-secret $env:AMO_JWT_SECRET --channel listed",
		"test:e2e:prepare": "node scripts/prepare-e2e.js",
		"test:e2e:run": "playwright test",
		"test:e2e:report": "playwright show-report",
		"test:e2e": "pnpm test:e2e:prepare && pnpm test:e2e:run"
	},
	"dependencies": {
		"core": "workspace:*",
		"webextension-polyfill": "^0.12.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.58.2",
		"@types/node": "^25.2.3",
		"@types/webextension-polyfill": "^0.12.4",
		"esbuild": "^0.27.3",
		"playwright-webextext": "^0.0.4",
		"typescript": "^5.9.3"
	}
}
