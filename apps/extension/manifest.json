{
	"manifest_version": 3,
	"name": "Job Autofill",
	"version": "0.1.0",
	"description": "Autofill job application forms.",
	"background": {
		"scripts": ["background.js"],
		"type": "module"
	},
	"action": {
		"default_title": "Job Autofill"
	},
	"permissions": ["storage", "scripting", "activeTab", "contextMenus"],
	"host_permissions": [
		"https://*.myworkdayjobs.com/*",
		"https://*.workday.com/*",
		"http://localhost/*",
		"http://127.0.0.1/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://*.myworkdayjobs.com/*",
				"https://*.workday.com/*",
				"http://localhost/*",
				"http://127.0.0.1/*"
			],
			"js": ["content.js"]
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "job-autofill@kitswas.github.io"
		}
	}
}
